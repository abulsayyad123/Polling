<%= form_for @changeset, @action, fn f ->  %>
  <%= if @changeset.action do %>
    <div class="error">
      <p>OOps, something went wrong </p>
    </div>
  <% end %>

  <%= label f, :name %>
  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <div>
    <%= submit "Save", class: "btn" %>
    <%= link "Cancel", to: Routes.district_path(@conn, :index), class: "btn-white" %>
  </div>
<% end %>